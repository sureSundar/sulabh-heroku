<div class ="container">
<div class="row align-items-center">
<div class="col-md-4"></div>
<div class="col-md-4">

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form-signin" } ) do |f| %>
    
    <h2 class="center-header">Sulabh sign in</h2>

    <%= f.label "phoneno" , :class => "sr-only" %>
    <%= f.text_field :phoneno, autofocus: true , placeholder: "10 digit ph.no",:id=>"inputPhone", :type => "phone", :class =>"form-control" %>
  

  
    <%= f.label :password, :class => "sr-only" %>
    <%= f.password_field :password, autocomplete: "off",:class => "form-control", :id => "inputPassword" , placeholder: "Password" %>
  

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>


    <%= f.submit "Sign In",:class=> "btn btn-primary btn-md btn-block" %>

<% end %>

