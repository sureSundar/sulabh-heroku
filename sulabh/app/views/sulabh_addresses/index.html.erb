<p id="notice"><%= notice %></p>

<h1>Listing Sulabh Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address1</th>
      <th>Address2</th>
      <th>Address3</th>
      <th>City</th>
      <th>Pincode</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sulabh_addresses.each do |sulabh_address| %>
      <tr>
        <td><%= sulabh_address.address1 %></td>
        <td><%= sulabh_address.address2 %></td>
        <td><%= sulabh_address.address3 %></td>
        <td><%= sulabh_address.city %></td>
        <td><%= sulabh_address.pincode %></td>
        <td><%= sulabh_address.country %></td>
        <td><%= link_to 'Show', sulabh_address %></td>
        <td><%= link_to 'Edit', edit_sulabh_address_path(sulabh_address) %></td>
        <td><%= link_to 'Destroy', sulabh_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to "Edit", edit_sulabh_address_path(sulabh_address), remote: true, class: "btn btn-default" %></td>
		<td><%= link_to "Delete", sulabh_address, remote: true, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>		
      </tr>
    <% end %>
  </tbody>
</table>
<div id="product-modal" class="modal fade"></div>
